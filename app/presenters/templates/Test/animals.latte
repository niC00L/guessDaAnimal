{block content}

<script>
    var correct = 0;
    var wrong = 0;

    $(function () {
        var clock = new $('#timer').FlipClock({
            countdown: true,
            clockFace: 'MinuteCounter',
            autoPlay: false
        });
        $('#timer').hide();
        $('#start-timer').click(function () {
            var time = parseInt($('#startTime').val());
            clock.setTime(time);
            clock.start(function () {
                console.log($.Callbacks());
            });
            $('#startTime').hide();
            $('#timer').show();
        });
    });
</script>

<div class="container">
    <h1>Test</h1>

    <input id="startTime" type='number' pattern="[0-9]*" step="10" value="30" />
    <div id="timer"></div>
    {snippet ajaxChange}	
        {if $ajax}
            <div class="row">					
                {foreach $quest as $item}
                    <img id="quest" height="300" src="{$basePath}/img/animals/{$item['img']}">
                {/foreach}
            </div>
            <div class="row">
                {foreach $options as $option}
                    <a class="col-sm-3 ajax img-link" n:href="Question!">
                        <img height="150" src="{$basePath}/img/animals/{$option['img']}">
                    </a>
                {/foreach}
            </div>
            <script>
                $(function () {
                    $('.ajax').click(function () {
                        src = $(this).find('img').attr('src');
                        if (src === $('#quest').attr('src')) {
                            correct += 1;
                            $(this).find('img').css('border-color', 'green');
                        }
                        else {
                            wrong += 1;
                            $(this).find('img').css('border-color', 'red');
                        }
                        console.log(correct);
                        console.log(wrong);
                    })
                });
            </script>
        {else}
            <blockquote>
                Zadajte čas v sekundách a spustite test.
            </blockquote>
            <a class="ajax" id="start-timer" n:href="Question!">Spustit test</a>
        {/if}
    {/snippet}       
</div>